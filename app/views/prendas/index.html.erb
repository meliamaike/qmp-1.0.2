
<div id="prendas">
  <div class="container-prendas">
    <h2 class="prendas-title">Tus prendas</h2>
    <%= link_to "Crear prenda", new_prenda_path, class:"new-item-btn" %>

    <ul class="prendas-all">
      <% @prendas.each do |prenda| %>
        <li class="prenda-unit">
          <% if prenda.imagen.attached? %>
            <%= image_tag(prenda.imagen) %>
            <%else %>
              <%=image_tag("/assets/placeholder.png")%>

          <%end %>

          <h3><%= link_to prenda.tipo, prenda%></h3>
        </li>
      <% end %>
    </ul>

  </div>
</div>





